<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewScrollSearch">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/buttonSearchClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/SearchCaptionDay" />

            <CheckedTextView
                android:id="@+id/checkedTextView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkMark="@mipmap/ic_launcher"
                android:checked="false"
                android:text="1日目" />

            <CheckedTextView
                android:id="@+id/checkedTextView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkMark="@mipmap/ic_launcher"
                android:text="2日目" />

            <CheckedTextView
                android:id="@+id/checkedTextView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkMark="@mipmap/ic_launcher"
                android:text="3日目" />

            <CheckedTextView
                android:id="@+id/checkedTextView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkMark="@mipmap/ic_launcher"
                android:text="4日目" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/SearchCaptionGenre" />

            <CheckedTextView
                android:id="@+id/checkedTextView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkMark="@mipmap/ic_launcher"
                android:text="展示" />

            <CheckedTextView
                android:id="@+id/checkedTextView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkMark="@mipmap/ic_launcher"
                android:text="パフォーマンス" />

            <CheckedTextView
                android:id="@+id/checkedTextView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkMark="@mipmap/ic_launcher"
                android:text="音楽" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/SearchCaptionFreeWord" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <Button
                android:id="@+id/buttonSearchExec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/SearchExec" />

        </LinearLayout>

</ScrollView>